@using Microsoft.AspNetCore.Identity
@using Models.Identity
@inject SignInManager<AppUser> _signInManager
@inject UserManager<AppUser> _userManager



 @if(_signInManager.IsSignedIn(User))
        { 
            <div class="content">
                <p>
                    Hello <strong>@_userManager.GetUserName(User)</strong> <br> <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Logout">Logout</a>
                </p>
            </div>
        }
        else
        {
            <div class="content">
                <p>
                    <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a><br> 
                    <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Register">Register</a>
                </p>
            </div>
        }
        
