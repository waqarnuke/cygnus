﻿@using Microsoft.AspNetCore.Identity
@using Models.Identity
@inject SignInManager<AppUser> _signInManager
@inject UserManager<AppUser> _userManager

    
     @if(_signInManager.IsSignedIn(User))
    {
        <li class="nav-item" style="color:#f36944">
          <a class="nav-link" > @_userManager.GetUserName(User)</a>  
        </li>
        <li  class="nav-item">
            <a   class="nav-link"  asp-area="Identity" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a  class="nav-link"  asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a><br> 
        </li>
    }
    

