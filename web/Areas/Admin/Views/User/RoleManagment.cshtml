@model RoleManagmentVM
<div class="car shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">

                <h2 class="text-white py-2">Manage User Role</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" action="RoleManagment" class="row" enctype="multipart/form-data">
            <input hidden asp-for="ApplicationUser.Id">
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="ApplicationUser.DisplayName" readonly class="form-control boder-0 shadow" />
                            <label asp-for="ApplicationUser.DisplayName" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">    
                            <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select boder-0 shadow">
                                @* <option disabled selected>--Select Category</option> *@
                            </select>
                        </div>
                        @{
                            var companyVisible = "display:none";
                        }
                        @if(Model.ApplicationUser.Role == SD.Role_Company)
                        {
                            companyVisible = "display:block";
                        }
                        <div class="form-floating py-2 col-12">    
                            <select asp-for="ApplicationUser.CompanyId" style="@companyVisible" asp-items="@Model.CompanyList" class="form-select boder-0 shadow">
                                @* <option disabled selected>--Select Category</option> *@
                            </select>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-success form-control" >Update</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-action="Index" class="btn btn-outline-dark form-control" >
                                    Cencel
                                </a>
                            </div>
                        </div>
                    </div>   
                </div>
            </div>
            
        
    </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
      <script>
    $(document).ready(function(){
        $('#ApplicationUser_Role').change(function(){
            var selection = $('#ApplicationUser_Role Option:Selected').text();
            if(selection == 'Company')
            {
                $('#ApplicationUser.CompanyId').show();
            }
            else
            {
                 $('#ApplicationUser.CompanyId').hide();
            }
        })
    })
   </script>
}