@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6 text-primary"><h3 class="text-primary">Category</h2></div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New
            </a>
        </div>
    </div>
    <table class="table table-borderd table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
            {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <dvi class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Upsert" >
                           <i class="bi bi-pencil-square text-primary"></i>  
                        </a>
                        <a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Delete" class="ps-3">
                           <i class="bi bi-trash3 text-primary"></i>  
                        </a>
                    </dvi>
                </td>
            </tr>   
            }
        </tbody>
        
    </table>
</div>