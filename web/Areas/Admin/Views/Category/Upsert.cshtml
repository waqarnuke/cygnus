@model Category
<div class="car shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">

                <h2 class="text-white py-2"> @(Model.Id != 0 ? "Update" : "Create") Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" action="Upsert" class="row" enctype="multipart/form-data">
            <input hidden asp-for="Id">
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name"  class="form-control boder-0 shadow" />
                            <label asp-for="Name" class="ms-2"></label>
                            <span asp-validation-for="Name" class="text-secondary" ></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            
                            <input asp-for="DisplayOrder"   class="form-control boder-0 shadow" />
                            <label asp-for="DisplayOrder" class="ms-2"></label>
                            <span asp-validation-for="DisplayOrder" class="text-secondary" ></span>
                        </div>
                        <div class="form-floating py-2 col-12">    
                            <input type="file" name="file" asp-for="ImageUrl" class="form-control boder-0 shadow" />
                            <label asp-for="ImageUrl" class="ms-2"></label>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if(Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-success form-control" >Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-success form-control" >Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark form-control" >
                                    Cencel
                                </a>
                            </div>
                        </div>
                    </div>   
                </div>
                <div class="col-2">
                    <img src="@Model.ImageUrl" width="100%" alt="image" style="border-radius: 5px; border 1px solid #bbb96b;">
                </div>
            </div>
            
        
    </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}